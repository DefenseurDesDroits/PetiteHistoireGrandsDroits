{
  "name": "petitesshistoiregrandsdroits",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "engines": {
    "node": ">=8.11.3",
    "npm": ">=6.0.x"
  },
  "main": "index.js",
  "scripts": {
    "sass": "npx node-sass --output ./public/css/ --source-map true --source-map-contents ./src/sass/",
    "pug": "npx pug ./src/pug/index.pug --out ./public/ -P",
    "webpack": "npx webpack --mode development --devtool source-map",
    "build": "npx pug ./src/pug/index.pug --out ./public/ && npx node-sass --output-style compressed --output ./public/css/ --source-map true --source-map-contents ./src/sass/ && npx webpack --mode production",
    "predev": "npx pug ./src/pug/index.pug --out ./public/ -P && npx node-sass --output ./public/css/ --source-map true --source-map-contents ./src/sass/ && npx webpack --mode development --devtool source-map",
    "start": "npx http-server",
    "dev": "npx http-server -S -o"
  },
  "author": "Yorick <yorick@ctrlaltdev.xyz>",
  "licenses": [
    {
      "type": "MPL-2.0",
      "url": "https://github.com/DefenseurDesDroits/PetiteHistoireGrandsDroits/blob/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/DefenseurDesDroits/PetiteHistoireGrandsDroits.git"
  },
  "bugs": {
    "url": "https://github.com/DefenseurDesDroits/PetiteHistoireGrandsDroits/issues"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "http-server": "^0.11.1",
    "nodemailer": "^4.6.7",
    "pm2": "^2.10.4"
  },
  "devDependencies": {
    "cors": "^2.8.4",
    "node-sass": "^4.9.0",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^4.12.0",
    "webpack-command": "^0.2.1"
  }
}
